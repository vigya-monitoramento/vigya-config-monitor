{
  "name": "vigya-monitor",
  "version": "1.0.5",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "start": "electron .",
    "start:dev": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.vigya.monitor",
    "productName": "Vigya Control Monitor",
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/ui",
        "to": "dist/ui",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "icone_executavel_arredondado.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "vigya-monitoramento",
        "repo": "vigya-config-monitor"
      }
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron-updater": "^6.6.2",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.8",
    "concurrently": "^8.2.2",
    "wait-on": "^7.0.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  }
}
